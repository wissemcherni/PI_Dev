{% extends 'base.html.twig' %}

{% block title %}events list!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
<div class="row">
<div class="col-md-4">
        <a class="btn btn-primary" href="{{path('addevent')}}">Add new event</a>

</div>

</div>
<div class="row">
    <table class="table table-striped" >
        <thead>
            <tr>
            <th>type</th>
            <th>localisation</th>
            <th>prix</th>    
            <th>date</th>        
            </tr>
            </thead>
            <tbody>
{%for e in Event%}
    <tr>
        <td>{{e.type}}</td>
        <td>{{e.localisation}}</td>
        <td>{{e.prix}}</td>
          <td>{{e.date|date('Y-m-d H:i:s')}}</td>
      <td><a class="btn btn-primary" href="{{path('event_update',{'id':e.id})}}">Update</a></td>
<td><a class="btn btn-danger" href="{{path('event_delete',{'id':e.id})}}">Delete</a></td>







    </tr>
</tbody>
{%endfor%}
</table>
</div>
</div>
{%endblock%}
